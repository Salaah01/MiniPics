<HomePage>:
    ## canvas:
    ##    Color:
    ##        rgba: 1, 1, 1, 1
    ##   Rectangle:
    ##        pos: self.pos
    ##        size: self.size

    cols: 1
    ## File Upload Section
    GridLayout:
        cols: 2
        rows: 4
        font_size: 100
        height: self.minimum_height
        size_hint_y: None
        TextInput:
            id: txt_filepath
            width: 250
            size_hint: 0.8, None
            height: 50
        Button:
            id: btn_browse_file:
            width: 0.2
            text: "Browse"
            size_hint: 0.2, None
            height: 50

    ## List of Files
    GridLayout:
        cols: 1
        rows: 1
        size_hint_y: None
        height: root.height * 0.4
        ListView:
            id: file_list

    ## Compression Options
    GridLayout:
        cols: 4

        ## Auto Compress
        Label:
            text: 'Auto Compress'
        GridLayout:
            cols: 5
            ToggleButton:
                width: 100
            Label:
            Label:
            Label:
            Label:
        Label:
        Label:

        ## Optimise Option
        Label:
            text: 'Optimise'
        GridLayout:
            cols: 5
            CheckBox:
                id: opt_optimise
            Label:
            Label:
            Label:
            Label:

        ## Quality Option
        Label:
            text: 'Quality'
        BoxLayout:
            orientation: 'vertical'
            Label:
                id: label_quality_value
                text: str(int(quality_value.value))
            Slider:
                id: quality_value
                value_track: True
                min: 1
                max: 100
                value: 80

        ## Resize Option
        Label:
            text: 'Resize'
        BoxLayout:
            Label:
                text: 'W'
            TextInput:
                id: resize_w
            Label:
                text: 'H'
            TextInput:
                id: resize_h

        ## Convert
        Label:
            text: 'Change File Type'
        DropDown:
            id: convert_opt

    ## Convert Button
    Button:
        text: 'Convert'
